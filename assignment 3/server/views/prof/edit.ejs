<div class="container">
    <div class="row">

            <form class="form" method="POST">
                <div class="form-elements">
                    <label for="name">Name</label>
                    <input type="text" class="elements" id="name" placeholder="Enter prof's Name" name="FullName" value="<%= prof.FullName%>" required>
                </div>
                <div class="form-elements">
                    <label for="Lastname">Last Name</label>
                    <input type="text" class="elements" id="Lastname" placeholder="Enter profs's Lastname" name="Program" value="<%= prof.Program%>" required>
                </div>
                <div class="form-elements">
                    <label for="ID">prof Id</label>
                    <input type="text" class="elements" id="ID" placeholder="Enter prof's id number" name="Email" value="<%= prof.Email%>" required>
                </div>
                <button class="btn" type="submit">Submit</button>
                <button type = "button" onclick="window.location.href='/proflist'" class="btn">Cancel</button>
            </form>
        </div>
    </div>
</div>


